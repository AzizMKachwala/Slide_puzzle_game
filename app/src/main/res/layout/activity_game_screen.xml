<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shade"
    android:padding="@dimen/_10sdp"
    tools:context=".Activity.GameScreenActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/baseline_back_24" />

    <ImageView
        android:id="@+id/imgSetting"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/baseline_settings_24" />

    <LinearLayout
        android:id="@+id/lytHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBack"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUserImageGot"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:src="@drawable/user_icon"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/txtUserNameGot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Aziz"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMovesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:text="Moves : 00"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/txtTimeCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Time : 00:00"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lytHeading"
        android:layout_marginTop="@dimen/_40sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <GridLayout
            android:id="@+id/gridGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:columnCount="3"
            android:padding="@dimen/_5sdp"
            android:rowCount="3">

            <Button
                android:id="@+id/btn1"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="00"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="01"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="02"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="10"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="11"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="12"
                android:text="6" />

            <Button
                android:id="@+id/btn7"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="20"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="21"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/btnNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_2sdp"
                android:tag="22"
                android:text="" />

        </GridLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:gravity="center">

        <Button
            android:id="@+id/btnShuffle"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:gravity="center"
            android:text="SHUFFLE" />

        <Button
            android:id="@+id/btnSolve"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:gravity="center"
            android:text="SOLVE" />

        <Button
            android:id="@+id/btnPause"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:gravity="center"
            android:text="PAUSE" />

    </LinearLayout>

</RelativeLayout>