<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SlidePuzzleGame" parent="Theme.Material3.DayNight.NoActionBar">
         Customize your light theme here.
         <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.SlidePuzzleGame" parent="Base.Theme.SlidePuzzleGame" />

    <style name="btn">
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="etv">
        <item name="android:background">@drawable/etv_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="btnNo">
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_30sdp</item>
    </style>
</resources>